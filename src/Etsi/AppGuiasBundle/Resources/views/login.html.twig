{% extends "EtsiAppGuiasBundle::baseLayout.html.twig" %}


{% block titulo_cabecera %}
	AppLogin
{% endblock %}

{% block wrapper %}
	<div id="steps">
		<form action="{{ path('login_check') }}" method="post">
			<fieldset class="step">
				{% if error %}
					<legend>{{ error.message }}</legend>
				{% endif %}

				<div class="contenedor">
					<div class="in-titulo">Datos de acceso</div>

					<label for="username" class="natural">Usuario:</label>
					<input id="username" class="natural" type="text" name="_username" value="{{ last_username }}" />
					<div class="clear"></div>
					<label for="password" class="natural">Contrase√±a:</label>
					<input id="password" class="natural" type="password" name="_password" />

					<div class="contenedor submit">
						<button id="registerButton" name="login" type="submit">LOGIN</button>
					</div>
				</div>
			</fieldset>
		</form>
	</div>
{% endblock %}